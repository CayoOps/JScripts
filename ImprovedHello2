//Leitura da linha 
const readline = require("readline");
const rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
});

rl.question("Qual seu nome? ", function(name){
    console.log(`Ol√°! ${name}`);
    rl.close();
});

rl.on("close", function(){
    console.log("\nBYE BYE !!!");
    process.exit(0);
});